<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Manage Dealers</h4>
                <p class="card-category">Activate/Deactivate</p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    First Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>
                                    Username
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dealer in dealers)
                            {
                                <tr>
                                    <td>
                                        @dealer.ID
                                    </td>
                                    <td>
                                        @dealer.FirstName
                                    </td>
                                    <td>
                                        @dealer.LastName
                                    </td>
                                    <td>
                                        @dealer.UserName
                                    </td>
                                    <td class="text-primary">
                                        <a href="@Url.Action("AddDealer", "Dealer",new { dealerID = dealer.ID })" class="btn btn-unique btn-rounded btn-sm my-0">Edit</a>
                                        <a href="@Url.Action("DeleteDealer", "Dealer",new { dealerID = dealer.ID })" class="btn btn-danger btn-rounded btn-sm my-0">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>